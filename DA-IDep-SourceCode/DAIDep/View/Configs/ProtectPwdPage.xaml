<Page x:Class="DAIDep.View.ProtectPwdPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:DAIDep.View"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="ProtectPwdPage" d:DesignHeight="505"
      d:DesignWidth="540"
      mc:Ignorable="d">
    <Page.Resources>
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Background" Value="#66FFFFFF" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter Margin="0"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#99ccee" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#5599cc" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Border BorderBrush="#55b7ce" BorderThickness="1" CornerRadius="10">
        <Grid x:Name="thePasswordPage" Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*" />
                <RowDefinition Height="145*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="130*" />
				<RowDefinition Height="*" />
                <RowDefinition Height="110*" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="1" Margin="10">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="25" />
					<!-- Spacing -->
					<RowDefinition Height="Auto" />
					<RowDefinition Height="15" />
					<!-- Spacing -->
					<RowDefinition Height="Auto" />
					<RowDefinition Height="15" />
					<!-- Spacing -->
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="220" />
					<!-- For TextBox and PasswordBox -->
					<ColumnDefinition Width="50" />
					<!-- For Browse Button -->
					<ColumnDefinition Width="10" />
					<!-- Spacing between buttons -->
					<ColumnDefinition Width="50" />
					<!-- For Confirm Button -->
				</Grid.ColumnDefinitions>
				<TextBlock x:Name="setSystemConfigTitle"
						   Grid.Row="0"
						   Grid.ColumnSpan="4"
						   HorizontalAlignment="Center"
						   VerticalAlignment="Center"
						   FontSize="20"
						   Text="设置系统挂载信息" />
				<TextBlock Grid.Row="2"
						   Grid.Column="0"
						   Margin="3,-1,0,0"
						   HorizontalAlignment="Left"
						   FontSize="16"
						   Text="加密盘挂载路径："
						   TextAlignment="Left"
						   VerticalAlignment="Top" />
				<TextBox x:Name="DrivePathInput"
						 Grid.Row="2"
						 Grid.Column="1"
						 Margin="0,0,5,0" />
				<Button Grid.Row="2"
						Grid.Column="2"
						Click="SetDrivePathButton_Click"
						Content="浏览"
						FontSize="14"
						Style="{StaticResource RoundedButton}" />
				<Button Grid.Row="2"
						Grid.Column="4"
						Click="ConfirmDrivePathButton_Click"
						Content="确认"
						FontSize="14"
						Style="{StaticResource RoundedButton}" />
				<TextBlock Grid.Row="4"
						   Grid.Column="0"
						   Margin="3,-1,0,0"
						   HorizontalAlignment="Left"
						   FontSize="16"
						   Text="挂载盘符设置："
						   TextAlignment="Left" />
				<TextBox x:Name="DriveLetterInput"
						 Grid.Row="4"
						 Grid.Column="1"
						 Margin="0,0,5,0" />
				<Button Grid.Row="4"
						Grid.Column="2"
						Click="SetDriveLetterButton_Click"
						Content="确认"
						FontSize="14"
						Style="{StaticResource RoundedButton}" />
				<TextBlock Grid.Row="6"
						   Grid.Column="0"
						   Margin="3,-1,0,0"
						   HorizontalAlignment="Left"
						   FontSize="16"
						   Text="加密盘挂载密码："
						   TextAlignment="Left" />
				<PasswordBox x:Name="DrivePasswordBox"
							 Grid.Row="6"
							 Grid.Column="1"
							 Margin="0,0,5,0" />
				<Button Grid.Row="6"
						Grid.Column="2"
						Click="SetDrivePwdTextButton_Click"
						Content="确认"
						FontSize="14"
						Style="{StaticResource RoundedButton}" />
			</Grid>
			
            <Grid Grid.Row="3" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="25" />
                    <!-- Spacing -->
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="15" />
                    <!-- Spacing -->
					<RowDefinition Height="Auto" />
                    <RowDefinition Height="15" />
                    <!-- Spacing -->
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions> 
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="220" />
                    <!-- For TextBox and PasswordBox -->
					<ColumnDefinition Width="50" />
					<!-- For Browse Button -->
					<ColumnDefinition Width="10" />
					<!-- Spacing between buttons -->
					<ColumnDefinition Width="50" />
					<!-- For Confirm Button -->
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="setAuthValidTitle"
                           Grid.Row="0"
                           Grid.ColumnSpan="3"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="20"
                           Text="设置身份验证信息" />

                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           Margin="3,-1,0,0"
                           HorizontalAlignment="Left"
                           FontSize="16"
                           Text="身份验证有效时间 (分钟)："
                           TextAlignment="Left" />
                <TextBox x:Name="AuthValidTimeInput"
                         Grid.Row="2"
                         Grid.Column="1"
                         Margin="0,0,5,0" />
                <Button Grid.Row="2"
                        Grid.Column="2"
                        Click="SetAuthValidTimeButton_Click"
                        Content="确认"
						FontSize="14"
                        Style="{StaticResource RoundedButton}" />

                <TextBlock Grid.Row="4"
                           Grid.Column="0"
                           Margin="3,-1,0,0"
                           HorizontalAlignment="Left"
                           FontSize="16"
                           Text="密码输入超时时间 (秒)："
                           TextAlignment="Left" />
                <TextBox x:Name="PasswordTimeoutInput"
                         Grid.Row="4"
                         Grid.Column="1"
                         Margin="0,0,5,0" />
                <Button Grid.Row="4"
                        Grid.Column="2"
                        Click="SetPasswordTimeoutButton_Click"
                        Content="确认"
						FontSize="14"
                        Style="{StaticResource RoundedButton}" />
            </Grid>
			
			<Grid Grid.Row="5" Margin="10">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
                    <RowDefinition Height="25" />
                    <!-- Spacing -->
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="15" />
                    <!-- Spacing -->
					<RowDefinition Height="Auto" />
                    <RowDefinition Height="15" />
                    <!-- Spacing -->
                    <RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="15" />
                    <ColumnDefinition Width="395" />
					<ColumnDefinition Width="50" />
					<ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
				
				<TextBlock x:Name="setSystemLogTitle"
					   Grid.Row="0"
					   Grid.ColumnSpan="2"
					   HorizontalAlignment="Center"
					   VerticalAlignment="Center"
					   FontSize="20"
					   Margin="60,0,5,0"
					   Text="设置日志采集信息" />
				
				<TextBlock Grid.Row="2"
					   Grid.Column="1"
					   HorizontalAlignment="Left"
					   FontSize="16"
					   Text="日志采集关键字（多关键字逗号分隔）："
					   TextAlignment="Left" />
				
				<TextBox Grid.Row="4" x:Name="LogKeywordInput"
						 Grid.Column="1"
						 HorizontalAlignment="Left"
						 Width="390"
						 Margin="0,0,5,0" />
				
				<Button Grid.Row="4"
						Grid.Column="2"
						HorizontalAlignment="Right"
						Width="50"
						Click="SetLogKeywordTextButton_Click"
						Content="确认"
						FontSize="14"
						Style="{StaticResource RoundedButton}" />
			</Grid>
        </Grid>
    </Border>
</Page>
