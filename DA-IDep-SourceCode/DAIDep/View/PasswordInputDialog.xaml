<Window x:Class="DAIDep.View.PasswordInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="修改身份验证密码" Height="200" Width="300"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="请输入原身份验证密码：" HorizontalAlignment="Center" FontSize="14" Margin="0,0,0,30" />
            <PasswordBox x:Name="PasswordBox" Width="180" Margin="0,0,0,30" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="确认" Width="75" Click="ConfirmButton_Click" Margin="0,0,20,0"/>
            <Button Content="取消" Width="75" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
