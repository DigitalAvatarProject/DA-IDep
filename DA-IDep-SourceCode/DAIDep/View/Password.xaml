<Page
    x:Class="DAIDep.View.Password" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DAIDep.View" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Password" mc:Ignorable="d">
    <Border
        Background="#cddced" BorderBrush="Black"
        BorderThickness="0" CornerRadius="20">
        <Grid>

            <!--  页面本体  -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <!--  提示框  -->
                <Label
                    Width="160" HorizontalAlignment="Center"
                    VerticalAlignment="Top" Content="请输入6位验证密码："
                    FontSize="16" FontWeight="Heavy"
                    Foreground="#55b7ce" />

                <!--  密码框，6个方框用于输入六位密码  -->
                <StackPanel
                    Margin="10" HorizontalAlignment="Center"
                    VerticalAlignment="Center" Orientation="Horizontal">
                    <Border
                        Width="40" Height="50"
                        Margin="5" Background="#55b7ce"
                        CornerRadius="5">
                        <PasswordBox
                            x:Name="passwordBox1" Width="40"
                            Height="50" HorizontalAlignment="Center"
                            VerticalAlignment="Center" HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center" Background="Transparent"
                            BorderThickness="0" FontSize="44"
                            MaxLength="1" PasswordChanged="PasswordBox_PasswordChanged"
                            PasswordChar="*" />
                    </Border>
                    <Border
                        Width="40" Height="50"
                        Margin="5" Background="#55b7ce"
                        CornerRadius="5">
                        <PasswordBox
                            x:Name="passwordBox2" Width="40"
                            Height="50" HorizontalAlignment="Center"
                            VerticalAlignment="Center" HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center" Background="Transparent"
                            BorderThickness="0" FontSize="44"
                            MaxLength="1" PasswordChanged="PasswordBox_PasswordChanged"
                            PasswordChar="*" />
                    </Border>
                    <Border
                        Width="40" Height="50"
                        Margin="5" Background="#55b7ce"
                        CornerRadius="5">
                        <PasswordBox
                            x:Name="passwordBox3" Width="40"
                            Height="50" HorizontalAlignment="Center"
                            VerticalAlignment="Center" HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center" Background="Transparent"
                            BorderThickness="0" FontSize="44"
                            MaxLength="1" PasswordChanged="PasswordBox_PasswordChanged"
                            PasswordChar="*" />
                    </Border>
                    <Border
                        Width="40" Height="50"
                        Margin="5" Background="#55b7ce"
                        CornerRadius="5">
                        <PasswordBox
                            x:Name="passwordBox4" Width="40"
                            Height="50" HorizontalAlignment="Center"
                            VerticalAlignment="Center" HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center" Background="Transparent"
                            BorderThickness="0" FontSize="44"
                            MaxLength="1" PasswordChanged="PasswordBox_PasswordChanged"
                            PasswordChar="*" />
                    </Border>
                    <Border
                        Width="40" Height="50"
                        Margin="5" Background="#55b7ce"
                        CornerRadius="5">
                        <PasswordBox
                            x:Name="passwordBox5" Width="40"
                            Height="50" HorizontalAlignment="Center"
                            VerticalAlignment="Center" HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center" Background="Transparent"
                            BorderThickness="0" FontSize="44"
                            MaxLength="1" PasswordChanged="PasswordBox_PasswordChanged"
                            PasswordChar="*" />
                    </Border>

                    <Border
                        Width="40" Height="50"
                        Margin="5" Background="#55b7ce"
                        CornerRadius="5">
                        <PasswordBox
                            x:Name="passwordBox6" Width="40"
                            Height="50" HorizontalAlignment="Center"
                            VerticalAlignment="Center" HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center" Background="Transparent"
                            BorderThickness="0" FontSize="44"
                            MaxLength="1" PasswordChanged="PasswordBox_PasswordChanged"
                            PasswordChar="*" />
                    </Border>
                </StackPanel>

                <!--  确定和取消按钮  -->
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Border
                        Width="50" Height="20"
                        Margin="5" Background="#55b7ce"
                        CornerRadius="3">
                        <Button
                            x:Name="submitButton" Height="20"
                            Background="Transparent" BorderThickness="0"
                            Click="ConfirmButton_Click" Content="确定"
                            FontSize="12" Foreground="AntiqueWhite" />
                    </Border>
                    <Border
                        Width="50" Height="20"
                        Margin="10" Background="#55b7ce"
                        CornerRadius="3">
                        <Button
                            x:Name="cancelButton" Height="20"
                            Background="Transparent" BorderThickness="0"
                            Click="CancelButton_Click" Content="取消"
                            FontSize="12" Foreground="AntiqueWhite" />
                    </Border>
                </StackPanel>
            </StackPanel>

        </Grid>
    </Border>
</Page>
