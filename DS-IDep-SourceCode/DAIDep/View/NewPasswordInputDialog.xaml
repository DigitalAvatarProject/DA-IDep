<Window x:Class="DAIDep.View.NewPasswordInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="修改身份验证密码" Height="220" Width="300"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="请输入新的身份验证密码：" HorizontalAlignment="Center" FontSize="14" Margin="0,0,0,20" />
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="输入密码：" VerticalAlignment="Center" Width="60" Margin="0,0,15,0" />
                <PasswordBox x:Name="NewPasswordBox" Width="140" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="重复输入：" VerticalAlignment="Center" Width="60" Margin="0,0,15,0" />
                <PasswordBox x:Name="RepeatPasswordBox" Width="140" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="确认" Width="75" Click="ConfirmButton_Click" Margin="0,0,20,0"/>
                <Button Content="取消" Width="75" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
